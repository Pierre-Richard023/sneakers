{% extends 'base.html.twig' %}

{% block title %}
    Demande de reinitialisation mot de passe
{% endblock %}

{% block body %}

    <section class="mx-auto max-w-screen-xl bg-gray-50 my-4 ">
        <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto lg:py-0">
            <a href="{{ path('home') }}" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 ">
                <img class="w-8 h-8 mr-2" src="{{ asset('images/logo.svg') }}"
                     alt="logo">
                Sneaker Pluss
            </a>
            <div class="w-full bg-white rounded-lg shadow  md:mt-0 sm:max-w-xl xl:p-0  ">
                <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                    <h1 class="text-xl text-center font-bold leading-tight tracking-tight text-gray-900 md:text-2xl ">
                        Demande de reinitialisation mot de passe
                    </h1>

                    {% for flash_error in app.flashes('reset_password_error') %}
                        <div id="alert-password"
                             class="flex items-center p-4 mb-4 text-red-800 rounded-lg bg-red-50  "
                             role="alert">
                            <svg class="flex-shrink-0 w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                                 fill="currentColor" viewBox="0 0 20 20">
                                <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
                            </svg>
                            <span class="sr-only">Info</span>
                            <div class="ms-3 text-sm font-medium">
                                {{ flash_error }}
                            </div>
                            <button type="button"
                                    class="ms-auto -mx-1.5 -my-1.5 bg-red-50 text-red-500 rounded-lg focus:ring-2 focus:ring-red-400 p-1.5 hover:bg-red-200 inline-flex items-center justify-center h-8 w-8   "
                                    data-dismiss-target="#alert-password" aria-label="Close">
                                <span class="sr-only">Close</span>
                                <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                                     fill="none"
                                     viewBox="0 0 14 14">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                          stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                                </svg>
                            </button>
                        </div>
                    {% endfor %}

                    {{ form_start(requestForm, {  'attr':{ class:'space-y-4 md:space-y-6' }} ) }}
                    <div>
                        {{ form_label(requestForm.email) }}
                        {{ form_widget(requestForm.email) }}
                    </div>

                    <div>
                        <small>
                            Entrez votre adresse email et nous vous enverrons un
                            lien pour réinitialiser votre mot de passe.
                        </small>
                    </div>


                    <button type="submit"
                            class="w-full text-white bg-secondary-normal hover:bg-secondary-normal focus:ring-4 focus:outline-none focus:ring-secondary-normal font-medium rounded-lg text-sm px-5 py-2.5 text-center   ">
                        Envoyer un email de réinitialisation du mot de passe
                    </button>

                    {{ form_end(requestForm) }}

                </div>

            </div>
        </div>
    </section>


{% endblock %}
