{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}

    <section class=" item-center">
        <div class="col-12 col-sm-6 col-md-4 col-lg-4">
            <h1 class="title">Réinitialisez votre mot de passe</h1>

            <div class="row">
                <div class="col col-12 col-sm-12 col-md-12 col-lg-12 ">

                    {{ form_start(resetForm) }}

                    <div class="col col-12 col-sm-12 col-md-12 col-lg-12 ">
                        {{ form_label(resetForm.plainPassword.first) }}
                        {{ form_widget(resetForm.plainPassword.first) }}
                    </div>
                    <div class="col col-12 col-sm-12 col-md-12 col-lg-12 ">
                        {{ form_label(resetForm.plainPassword.second) }}
                        {{ form_widget(resetForm.plainPassword.second) }}
                    </div>

                    <div class="col col-12 col-sm-12 col-md-12 col-lg-12 ">
                        <button type="submit" class="btn primary">
                            Réinitialiser le mot de passe
                        </button>
                    </div>

                    {{ form_end(resetForm) }}

                </div>
            </div>

        </div>
    </section>

{% endblock %}
