{% extends 'admin/dashboard.html.twig' %}

{% block title %}Sneaker{% endblock %}

{% block body %}
    <h1>Sneaker</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sneaker.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ sneaker.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ sneaker.price }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ sneaker.color }}</td>
            </tr>
            <tr>
                <th>Article_number</th>
                <td>{{ sneaker.articleNumber }}</td>
            </tr>
            <tr>
                <th>Shoe_size</th>
                <td>{{ sneaker.shoeSize ? sneaker.shoeSize|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ sneaker.stock }}</td>
            </tr>
            <tr>
                <th>Release_date</th>
                <td>{{ sneaker.releaseDate ? sneaker.releaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ sneaker.details }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin.sneaker.index') }}">back to list</a>

    <a href="{{ path('admin.sneaker.edit', {'id': sneaker.id}) }}">edit</a>

    {{ include('admin/sneaker/_delete_form.html.twig') }}
{% endblock %}
